<p id="notice"><%= notice %></p>

<h1>魚図鑑</h1>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dictionaries.each do |dictionary| %>
      <tr class="text-info">
        <td><%= dictionary.name %></td>
        <td><%= dictionary.notes %></td>
        <td><%= link_to 'Show', dictionary %></td>
        <td><%= link_to 'Edit', edit_dictionary_path(dictionary) if current_user&.admin? %></td>
        <td><%= link_to 'Destroy', dictionary, method: :delete, data: { confirm: 'Are you sure?' } if current_user&.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dictionary', new_dictionary_path if current_user&.admin? %>
