<p id="notice"><%= notice %></p>

<h1>記事</h1>

<table>
  <thead>
    <tr>
      <th>テーマ</th>
      <th>ストーリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr class="text-info">
        <td><%= micropost.title %></td>
        <td><%= micropost.story %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) if current_user&.admin? %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } if current_user&.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path if current_user&.admin? %>
